        <input id="COMPANY_ID" name="COMPANY_ID" type="hidden" value="@Model.COMPANY_ID">

        <div class="form-group">
            @Html.LabelFor(model => model.NAME, htmlAttributes: new { @class = "control-label col-md-3" })
